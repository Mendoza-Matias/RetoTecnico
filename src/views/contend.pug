doctype html
html(lang="en")
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet", href="css/style.css")
      link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
      title Document
   body 
h1(class='text-center mb-5 text-light') Trabajos realizados
div(class='container ')
 table(class="table")
  thead(class='bg-light ')
   each trabajo in reparacion
    tr
      th(scope='col') #
      th(scope="col") Nombre 
      th(scope="col") Modelo 
      th(scope="col") Reparacion 
    tr
      th(scope="row") 
      td= trabajo.nombre
      td= trabajo.telefono 
      td= trabajo.reparacion
div(class='alinear mt-5 gap-3')         
   button(class='btn btn-primary') 
    a(class='text-light text-decoration-none' href="/create") Crear trabajo 
   button(class='btn btn-danger') 
    a(class='text-light text-decoration-none' href="/exit") Salir 